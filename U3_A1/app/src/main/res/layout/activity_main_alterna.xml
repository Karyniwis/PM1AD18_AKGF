<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp" android:layout_height="450dp" android:layout_gravity="center" android:layout_column="6
" android:orientation="horizontal">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:maxLength="10"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="1"
        android:layout_marginBottom="3dp"
        android:layout_row="5"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnCero"
        android:text="0"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="2"
        android:layout_row="5"
        android:onClick="btnPunto"
        android:text="."
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="3"
        android:layout_row="5"
        android:onClick="btnIgual"
        android:text="="
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="89dp"
        android:layout_height="66dp"
        android:layout_column="4"
        android:layout_row="5"
        android:onClick="Dividir"
        android:text="/"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="1"
        android:layout_marginBottom="3dp"
        android:layout_row="3"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnCuatro"
        android:text="4"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="2"
        android:layout_row="4"
        android:onClick="btnOcho"
        android:text="8"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="3"
        android:layout_row="4"
        android:onClick="btnNueve"
        android:text="9"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnPor"
        android:layout_width="89dp"
        android:layout_height="66dp"
        android:layout_column="4"
        android:layout_row="4"
        android:onClick="Multiplicar"
        android:text="*"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="1"
        android:layout_marginBottom="3dp"
        android:layout_row="4"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnSiete"
        android:text="7"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="2"
        android:layout_row="3"
        android:onClick="btnCinco"
        android:text="5"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="3"
        android:layout_row="3"
        android:onClick="btnSeis"
        android:text="6"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnRes"
        android:layout_width="89dp"
        android:layout_height="66dp"
        android:layout_column="4"
        android:layout_row="3"
        android:onClick="Restar"
        android:text="-"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnUno"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="1"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_row="2"
        android:background="@android:color/holo_blue_dark"
        android:maxLength="9"
        android:onClick="btnUno"
        android:text="1"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="3"
        android:layout_marginRight="3dp"
        android:layout_row="2"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnTres"
        android:text="3"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="84dp"
        android:layout_height="66dp"
        android:layout_column="2"
        android:layout_marginRight="3dp"
        android:layout_row="2"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnDos"
        android:text="2"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="89dp"
        android:layout_height="66dp"
        android:layout_column="4"
        android:layout_row="2"
        android:onClick="Sumar"
        android:text="+"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnCleaner"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:background="@android:color/holo_red_dark"
        android:onClick="btnCleaner"
        android:text="Clear"
        android:textColor="@android:color/background_light" />
</GridLayout>